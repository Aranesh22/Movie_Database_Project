html 
    head
        style 
            include ../public/styles/homeStyles.css  
            include ../public/styles/movie.css
            
        title Movies
    body 

        include navbar  
        
        div.grid
            div.Content 

                div.movie
                    div.info 
                        img(src=mData.poster)
                        h1#movName #{mData.title}   
                        if !watching
                                button(id="watched") Add To WatchList
                        else 
                                button(id="unwatched") Remove From WatchList

                        h3 Runtime: #{mData.runtime}   
                        h3 Average Rating: #{avrgRating} 
                        h3 Rated: #{mData.rating}
                        each val in mData.genre
                            a(id="genre" href='/movies?gen='+val) #{val}   

                    div.people
                        div.section
                            h3 Director:   
                                ul
                                    each val in directors  
                                        li
                                            a(href='/people/'+val._id) #{val.name} 
                        
                        div.section
                            h3 Writers: 
                                ul
                                    each val in writers
                                        li
                                            a(href='/people/'+val._id) #{val.name} 

                        div.section 
                            h3 Actors: 
                                ul 
                                    each val in actors  
                                        li
                                            a(href= '/people/'+val._id) #{val.name} 
                div.reviewContent
                    div.AddReviews
                        h3 Add a review:  
                        h4(style="display: inline;") Score: 
                        select#score
                            option(value="1") 1
                            option(value="2") 2
                            option(value="3") 3
                            option(value="4") 4
                            option(value="5") 5
                            option(value="6") 6
                            option(value="7") 7
                            option(value="8") 8
                            option(value="9") 9
                            option(value="10") 10
                        textarea#rSummary(placeholder="Summary" cols="50" rows="1" style="display: block;resize: none;")
                        textarea#rText(placeholder="Review Text" cols="100" rows="10" style="display: block; resize: none;")   
                        button#submitB(type=button) submit 

                    div.Reviews 
                        h3 Reviews  
                            each val in reviews  
                                div.section
                                    a(style="display: block;" href="/users/"+ val.usernameId) #{val.username} 
                                    h5 Score: #{val.rating}
                                    h5 #{val.reviewText}   
                                    a(style="display: block;" href="/movies/"+ val.mId+"/" + val._id) Full Review
                                    br 

            div.similiarMovies
                div.section 
                    h3 Similar Movies 
                    ul 
                        each val in similarMovies 
                            li
                                a(href='/movies/'+val._id) #{val.title} 


            script(src="/js/movie.js") 