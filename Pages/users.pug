html 
    head 
        title Users
        style 
            include ../public/styles/homeStyles.css
            include ../public/styles/search.css 
    body 

        include navbar
        div.search
            h Search for Users...
            br
            input(type="text" placeholder="Username")
            button(id="search") Search

        div.results
            each user in users 
                div.link
                    a(href="/users/" + user.id) #{user.username}
        div.pagination
            if current > 1
                - let url = "http://localhost:3000/users?page=" + (current-1)
                - if(qstring.length > 0){ url += "&" + qstring; }
                a#prev(href=url style="margin-right: 439px") Previous
                | 
            - url = "http://localhost:3000/users?page=" + (current+1)
            - if(qstring.length > 0){ url += "&" + qstring; }
            a#next(href=url) Next